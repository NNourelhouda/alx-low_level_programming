#include <stdio.h>
#include "main.h"

/**
 * puts_half - prints half of a string
 * @str: string to print
 *
 * Return: void
 */
 
void puts_half(char *str)
{
int len = 0, i;
while (str[len])
{
len++;
}
if (len % 2 == 0)
{
i = len / 2;
}
else
{
i = (len + 1) / 2;
}
for (; i < len; i++)
{
_putchar(str[i]);
}
_putchar('\n');
}
